<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.panotroller">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Panotroller">
        <activity android:name=".PanoAcquisition"></activity>
        <activity android:name=".PanoSetup">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.panotroller.MainActivity" />
        </activity>
        <activity android:name=".BluetoothConfig">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.panotroller.MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>